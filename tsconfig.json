{
  "compilerOptions": {
    "target": "ES2020",
    "baseUrl": "src",
    "jsx": "react",
    "module": "commonJS",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
  "include": [
    "src",
    "src/types.d.ts"
  ]
}
